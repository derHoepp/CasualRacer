<Page x:Class="StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CasualRacer"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="StartPage">
    <Grid >
        <Image Source="/CasualRacer;component/Assets/Backgrounds/Car.png" Height="300" VerticalAlignment="Top" Margin="100"/>
        <StackPanel Width="200" VerticalAlignment="Bottom" Margin="100">
            <Button Content="Start Game" Click="Button_Click" />    
            <Button Content="Options" Click="Button_Click_1" />
            <Button Content="Exit" Click="Button_Click_2" />
        </StackPanel>
    </Grid>
</Page>
